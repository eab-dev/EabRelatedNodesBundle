{% block relatednodes_field %}
{% spaceless %}
    {% if not ez_is_field_empty( content, field ) %}
        {% for locationId in field.value.locationIds %}
            {{ render( controller( "ez_content:viewLocation",
                                   {
                                        'locationId': locationId,
                                        'viewType': parameters.viewType | default( 'line' ),
                                        'noLayout': 1
                                    }
                ) ) }}
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock %}
